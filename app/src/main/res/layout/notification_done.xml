<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection @*android accesses private resources-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginStart="@*android:dimen/notification_content_margin_start"
    android:layout_marginEnd="@*android:dimen/notification_content_margin_end"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/notification_done_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/task_status_done"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Done"
        />

    <Button
        android:id="@+id/notification_done_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="end|center_vertical"
        android:text="@string/action_undo"
        tools:text="Undo"
        />

</LinearLayout>
